<div class="container-sm">

<% if params[:query].present? %>
  <div class="cards-all row justify-content-center">
    <%= render 'index_product', products: @products %>
  </div>
<% else %>
  <h2 class="my-3">Les fruits et légumes de <%= @current_month %></h2>
    <ul class="nav nav-tabs justify-content-around" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="fruit-tab" data-bs-toggle="tab" data-bs-target="#fruit" type="button" role="tab" aria-controls="fruit" aria-selected="true">Fruits</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="legume-tab" data-bs-toggle="tab" data-bs-target="#legume" type="button" role="tab" aria-controls="legume" aria-selected="false">Légumes</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button" role="tab" aria-controls="all" aria-selected="false">Tous</button>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="fruit" role="tabpanel" aria-labelledby="fruit-tab">
        <div class="cards-all row justify-content-center">
          <%= render 'index_product', products: @fruits %>
        </div>
      </div>
      <div class="tab-pane fade" id="legume" role="tabpanel" aria-labelledby="legume-tab">
        <div class="cards-all row justify-content-center">
          <%= render 'index_product', products: @legumes %>
        </div>
      </div>
      <div class="tab-pane fade" id="all" role="tabpanel" aria-labelledby="all-tab">
          <div class="cards-all row justify-content-center">
            <%= render 'index_product', products: (@fruits + @legumes).shuffle %>
          </div>
      </div>
    </div>
  </div>
<% end %>
