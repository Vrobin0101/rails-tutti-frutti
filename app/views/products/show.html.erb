<%= render 'product', product: @product %>

<div class="show-container">
  <%= simple_form_for [@product, @follow_up] do |f| %>
    <% if @product.localable %>
      <%= f.input :local, as: :boolean, label: 'Votre produit est&nbsp<strong>français</strong>'.html_safe, input_html: { class: "toggle d-none" } %>
    <% else %>
      <%= f.input :local, as: :boolean, disabled: true, label: "Votre produit n'est pas&nbsp<strong>français</strong>".html_safe, input_html: { class: "toggle d-none"} %>
    <% end %>
    <%= f.input :bio, as: :boolean, label: 'Votre produit est&nbsp<strong>bio</strong>'.html_safe, input_html: { class: "toggle d-none"} %>

    <h5>Des idees de recettes</h5>
    <% @recipes.each do |recipe| %>
      <div>
        <p>
        <%= link_to recipe[:link] do %>
          <%= recipe[:name] %>
        <% end %>
          <%= recipe[:note] %>
        </p>
      </div>
    <% end %>

    <% if @product.season?(Time.now.month) %>
      <h2>Cela pourrait vous plaire </h2>
      <div class="container w-90">
        <%= render 'shared/carousel', products: @alternatives %>
      </div>
    <% else %>
      <h2>Découvrez les alternatives </h2>
      <div class="container w-90">
        <%= render 'shared/carousel', products: @alternatives %>
      </div>
    <% end %>

      <div style="margin-top: 150px"></div>
      <div class="d-flex">
        <%= f.submit class:"btn-bot btn-block fixed-bottom w-100 btn-lg btn-primary rounded-0", value: "Ajouter à mon suivi "%>
      </div>
    <% end %>

  </div>
</div>
