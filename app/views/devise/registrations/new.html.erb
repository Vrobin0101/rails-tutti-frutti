<div class="container">
  <div class="m-5 d-grid justify-content-center background-sign-up" style="background-image: url(<%= image_url('ananas.svg') %>)">
    <h2 class="sign-in-title pb-3">Inscription</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name,
                    autofocus: true,
                    label_html: { class: 'label-sign-input'},
                    placeholder: 'Michael' %>
        <%= f.input :last_name,
                    autofocus: true,
                    label_html: { class: 'label-sign-input'},
                    placeholder: 'Scott' %>
        <%= f.input :username,
                    autofocus: true,
                    label_html: { class: 'label-sign-input'},
                    placeholder: 'Marc' %>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    label_html: { class: 'label-sign-input'},
                    placeholder: 'michael@dundermifflin.com' %>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" },
                    label_html: { class: 'label-sign-input'},
                    placeholder: '●●●●●●' %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" },
                    label_html: { class: 'label-sign-input'},
                    placeholder: '●●●●●●' %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "S'inscrire", class: 'btn-info' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
