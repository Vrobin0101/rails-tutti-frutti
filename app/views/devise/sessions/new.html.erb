<div class="container">
  <div class="m-5 d-grid justify-content-center background-sign-in" style="background-image: url(<%= image_url('lemon.svg') %>)">
    <h2 class="sign-in-title pb-3">Connexion</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    label_html: { class: 'label-sign-input'},
                    placeholder: 'michael@dundermifflin.com' %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    label_html: { class: 'label-sign-input'},
                    placeholder: '●●●●●●' %>
        <%= f.input :remember_me, input_html: { class: 'ms-0' }, label_html: { class: 'label-sign-in ms-2' }, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Se connecter", class: 'btn-info' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
